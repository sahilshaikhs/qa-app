<h1>Ask a Question</h1>

<%= form_with model: @question do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :question %><br>
    <%= form.text_area :question %>
  </div>

  <div>
    <%= form.label :problem_description %><br>
    <%= form.text_area :problem_description %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>